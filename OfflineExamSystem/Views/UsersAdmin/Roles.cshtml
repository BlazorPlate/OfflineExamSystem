@model IEnumerable<OfflineExamSystem.Models.IndexUserRolesViewModel>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
    </button>
    <h3 class="modal-title">@Resources.Resources.Details</h3>
</div>
<div class="modal-body">
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Resources.Resources.UserName
            </dt>
            <dd>
                @ViewBag.UserName
            </dd>
        </dl>
        <h4>@Resources.Resources.ListUserPermissions</h4>
        @if (Model.Count() == 0)
        {
            <hr/>
            <p>@Resources.Resources.NoPermissionsForUser</p>
        }
        <table class="table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.RoleName
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> @Resources.Resources.Close</button>
</div>