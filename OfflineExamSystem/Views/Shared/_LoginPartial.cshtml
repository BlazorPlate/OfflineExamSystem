@using Microsoft.AspNet.Identity
@using System.Globalization
@using OfflineExamSystem.Helpers
@{
    CultureInfo arCultureInfo = CultureInfo.CreateSpecificCulture("ar-JO");
    CultureInfo enCultureInfo = CultureInfo.CreateSpecificCulture("en-US");
}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "", returnUrl = HttpContext.Current.Request.Url.AbsolutePath }, FormMethod.Post, new { id = "logoutForm", @class = (CultureHelper.IsRighToLeft() ? "navbar-left" : "navbar-right") }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink(Resources.Resources.Hello + " " + User.Identity.GetUserName() + " !", "Index", "Manage", routeValues: new { area = "" }, htmlAttributes: new { title = Resources.Resources.Manage })</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.Resources.LogOff</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-globe"></i> @Resources.Resources.Language<span class="caret"></span></a>
                <ul class="dropdown-menu scrollable-menu">
                    <li><a href="@Url.RouteUrl(new RouteValueDictionary(ViewContext.RouteData.Values.ToDictionary(r => r.Key, r => r.Key == "culture" ? "en-US" : r.Value)))@Request.Url.Query"><img src="~/Content/Images/blank.gif" class="flag flag-us" alt="@enCultureInfo.NativeName"> @enCultureInfo.NativeName.Replace(")", "").Replace("(", "- ")</a></li>
                    <li><a href="@Url.RouteUrl(new RouteValueDictionary(ViewContext.RouteData.Values.ToDictionary(r => r.Key, r => r.Key == "culture" ? "ar-SA" : r.Value)))@Request.Url.Query"><img src="~/Content/Images/blank.gif" class="flag flag-sa" alt="@arCultureInfo.NativeName"> @arCultureInfo.NativeName.Replace(")", "").Replace("(", "- ")</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav @(CultureHelper.IsRighToLeft() ? "navbar-left" : "navbar-right") ">
        <li>@Html.ActionLink(Resources.Resources.Register, "Register", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Resources.Resources.LogIn, "Login", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-globe"></i> @Resources.Resources.Language<span class="caret"></span></a>
            <ul class="dropdown-menu scrollable-menu">
                <li><a href="@Url.RouteUrl(new RouteValueDictionary(ViewContext.RouteData.Values.ToDictionary(r => r.Key, r => r.Key == "culture" ? "en-US" : r.Value)))@Request.Url.Query"><img src="~/Content/Images/blank.gif" class="flag flag-us" alt="@enCultureInfo.NativeName"> @enCultureInfo.NativeName.Replace(")", "").Replace("(", "- ")</a></li>
                <li><a href="@Url.RouteUrl(new RouteValueDictionary(ViewContext.RouteData.Values.ToDictionary(r => r.Key, r => r.Key == "culture" ? "ar-JO" : r.Value)))@Request.Url.Query"><img src="~/Content/Images/blank.gif" class="flag flag-jo" alt="@arCultureInfo.NativeName"> @arCultureInfo.NativeName.Replace(")", "").Replace("(", "- ")</a></li>
            </ul>
        </li>
    </ul>
}